  "item": [
    {
      "name": "商品管理",
      "item": [
        {
          "name": "获取商品列表",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-token",
                "value": "{{jwt_token}}",
                "description": "JWT认证令牌"
              }
            ],
            "url": {
              "raw": "{{base_url}}/v1/goods/list?pages=1&pagePerNums=10&isHot=true",
              "host": ["{{base_url}}"],
              "path": ["v1", "goods", "list"],
              "query": [
                {
                  "key": "pages",
                  "value": "1",
                  "description": "页码"
                },
                {
                  "key": "pagePerNums",
                  "value": "10",
                  "description": "每页数量"
                },
                {
                  "key": "isHot",
                  "value": "true",
                  "description": "是否热门"
                },
                {
                  "key": "priceMin",
                  "value": "100",
                  "description": "最低价格",
                  "disabled": true
                },
                {
                  "key": "priceMax",
                  "value": "5000",
                  "description": "最高价格",
                  "disabled": true
                },
                {
                  "key": "brand",
                  "value": "1",
                  "description": "品牌ID",
                  "disabled": true
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "批量获取商品",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-token",
                "value": "{{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"ids\": [1, 2, 3, 4, 5]\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/goods/batch",
              "host": ["{{base_url}}"],
              "path": ["v1", "goods", "batch"]
            }
          },
          "response": []
        },
        {
          "name": "获取商品详情",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-token",
                "value": "{{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/v1/goods/detail/{{goods_id}}",
              "host": ["{{base_url}}"],
              "path": ["v1", "goods", "detail", "{{goods_id}}"]
            }
          },
          "response": []
        },
        {
          "name": "创建商品",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-token",
                "value": "{{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"iPhone 15 Pro Max\",\n  \"goodsSn\": \"IPHONE15PM_001\",\n  \"stocks\": 100,\n  \"marketPrice\": 9999.00,\n  \"shopPrice\": 8999.00,\n  \"goodsBrief\": \"最新款iPhone 15 Pro Max，搭载A17 Pro芯片\",\n  \"goodsDesc\": \"详细商品描述：iPhone 15 Pro Max采用钛金属设计，配备6.7英寸超视网膜XDR显示屏，搭载A17 Pro芯片，支持Action Button和USB-C接口。\",\n  \"shipFree\": true,\n  \"images\": [\"iphone15pm_1.jpg\", \"iphone15pm_2.jpg\", \"iphone15pm_3.jpg\"],\n  \"descImages\": [\"iphone15pm_desc_1.jpg\", \"iphone15pm_desc_2.jpg\"],\n  \"goodsFrontImage\": \"iphone15pm_front.jpg\",\n  \"isNew\": true,\n  \"isHot\": true,\n  \"onSale\": true,\n  \"categoryId\": 1,\n  \"brandId\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/goods",
              "host": ["{{base_url}}"],
              "path": ["v1", "goods"]
            }
          },
          "response": []
        },
        {
          "name": "更新商品",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-token",
                "value": "{{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"iPhone 15 Pro Max 256GB\",\n  \"goodsSn\": \"IPHONE15PM_256GB_001\",\n  \"stocks\": 50,\n  \"marketPrice\": 10999.00,\n  \"shopPrice\": 9999.00,\n  \"goodsBrief\": \"iPhone 15 Pro Max 256GB版本\",\n  \"goodsDesc\": \"更新后的商品描述\",\n  \"shipFree\": true,\n  \"images\": [\"iphone15pm_256gb_1.jpg\", \"iphone15pm_256gb_2.jpg\"],\n  \"descImages\": [\"iphone15pm_256gb_desc_1.jpg\"],\n  \"goodsFrontImage\": \"iphone15pm_256gb_front.jpg\",\n  \"isNew\": true,\n  \"isHot\": true,\n  \"onSale\": true,\n  \"categoryId\": 1,\n  \"brandId\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/goods/{{goods_id}}",
              "host": ["{{base_url}}"],
              "path": ["v1", "goods", "{{goods_id}}"]
            }
          },
          "response": []
        },
        {
          "name": "删除商品",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "x-token",
                "value": "{{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/v1/goods/{{goods_id}}",
              "host": ["{{base_url}}"],
              "path": ["v1", "goods", "{{goods_id}}"]
            }
          },
          "response": []
        }
      ]
